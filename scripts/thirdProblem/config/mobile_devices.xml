        <isOrchestrator>false</isOrchestrator>
        <generateTasks>false</generateTasks>
        <cores>4</cores>
        <mips>4000</mips>
        <ram>4000</ram>
        <storage>32000</storage>
        <serverType>UE</serverType>
    </device>
